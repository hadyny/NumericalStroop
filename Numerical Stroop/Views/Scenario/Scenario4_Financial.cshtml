@model Numerical_Stroop.Models.Scenario

<h2>Scenario 4</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal row">
        <div class="col-xs-8">
            <h4>
                Imagine you need to replace your old cooktop (e.g. oven, range, stove, gas cooker). The cooktop you plan to buy has two different payment options:
            </h4>
            <ol class="scenario">
                <li>You can pay the total amount of $@ViewBag.Question1 in cash</li>
                <li>You can pay in 12 monthly payments, of $@ViewBag.Question2 each. This would mean you would pay a total of $@ViewBag.Question3.</li>
            </ol>
            <h4>Which option would you choose? Would you have the cash? Would the interest on the loan be worth paying?</h4>
            <hr />
            <h4>
                Please write how you would respond to this scenario in the box below. Be as detailed as possible. You may write as little or as much as you need to answer the question:
            </h4>
        </div>
        <div class="col-xs-4">
            <img src="~/Content/Image-financial-scenario-4.png" alt="Financial Image" />
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.EditorFor(model => model.Answer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-xs-10">
                <input type="submit" value="Continue >>" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $('#Answer').focus();
</script>
}
