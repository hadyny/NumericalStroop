@model Numerical_Stroop.Models.Scenario

<h2>Scenario 4</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal row">
        <div class="col-xs-8">
            <h4>
                Your friend is the owner of a store and accidentally ordered an extra @ViewBag.Question1 bottles of milk.
                They now need to decide how to store it so it doesn’t go bad. They have two options:
            </h4>
            <ol class="scenario">
                <li>Store all the bottles in one large refrigerator at another nearby store.</li>
                <li>Store the bottles in ten different smaller refrigerators around town, with around @ViewBag.Question2 bottles stored in each.</li>
            </ol>
            <h4>Which storage option would you recommend to your friend? Can you explain why?</h4>
            <hr />
            <h4>
                Please write how you would respond to this scenario in the box below. Be as detailed as possible. You may write as little or as much as you need to answer the question:
            </h4>
        </div>
        <div class="col-xs-4">
            <img src="~/Content/Image-control-scenario-4.png" alt="Financial Image" />
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.EditorFor(model => model.Answer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-xs-10">
                <input type="submit" value="Continue >>" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $('#Answer').focus();
</script>
}
